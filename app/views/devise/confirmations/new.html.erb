<div class="row">
  <div class="col-xs-12 text-xs-center">
    <h3>Resend confirmation instructions</h3>
    <br>
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="form-group col-xs-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
          <%= f.label :email, class: 'sr-only' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'example@email.com', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        </div>
      </div>

      <%= f.submit "Resend confirmation instructions", class: 'btn btn-primary' %>
    <% end %>
    <br>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
