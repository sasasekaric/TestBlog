<div class="row">
  <div class="col-xs-12 text-xs-center">
    <h3>Edit <%= resource_name.to_s.humanize %></h3>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="form-group col-xs-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
          <%= f.label :email, class: 'sr-only' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'example@email.com' %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-xs-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
          <%= f.label :name, class: 'sr-only' %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
        </div>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="row">
        <div class="form-group col-xs-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "enter new password if you want to change it"  %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-xs-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <%= f.label :password_confirmation, class: 'sr-only' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'new password again' %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-xs-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <%= f.label :current_password, class: 'sr-only' %>
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'we need your current password to confirm your changes' %>
        </div>
      </div>

      <%= f.submit "Update", class: 'btn btn-primary' %>
    <% end %>
    <br>
    <br>
    <%= render "devise/shared/links" %>
    <%= link_to "Back", :back %>
    <br>
    <br>
    <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
    <br>
    <br>
  </div>
</div>



